<section class="hero is-primary is-bold is-fullheight is-fullheight-mobile" style="position: relative; overflow: hidden; background: linear-gradient(to bottom, #002A72, #002768E4,  #00081500);">
<div class="hero-body columns is-centered is-vcentered " style="position: relative;">
          <%= image_tag('bg-stars.png', style: 'width: 100%; height: 40%; object-fit: cover; position: absolute; top: 0; left: 0;') %>



<div class="columns is-centered">
<br>
  <div class="is-desktop is-mobile box">
    <h2 class="title has-text-dark">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div class="field">
        <%= f.submit "Send me reset password instructions", class: "button is-link" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
  </div>
  </section>