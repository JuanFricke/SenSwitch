<section class="hero is-primary is-bold is-fullheight is-fullheight-mobile" style="position: relative; overflow: hidden; background: linear-gradient(to bottom, #002A72, #002768E4,  #00081500);">
<div class="hero-body columns is-centered is-vcentered " style="position: relative;">
          <%= image_tag('bg-stars.png', style: 'width: 100%; height: 40%; object-fit: cover; position: absolute; top: 0; left: 0;') %>


  
  <div class="is-desktop is-mobile box">
    <h2 class="title has-text-black">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class:"label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", type:"email", placeholder:"ex: jorge@email.com"  %>
        </div>

        <div>
          <%= f.label :password, class:"label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"input", type:"password", placeholder:"*************"   %>
        </div>

        <div>
          <%= f.label :password_confirmation, class:"label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", type:"password", placeholder:"*************"   %>
        </div>
        <br>

        <div>
          <%= f.submit "Sign up", class:"button is-link" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
  </div>
  </section>