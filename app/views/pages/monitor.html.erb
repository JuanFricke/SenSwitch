        </div>
      </div>
    </div>

  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function () {
    $(".notification").click(function () {
      // ID do sensor associado à notificação
      var sensorId = $(this).parent().attr("id");
      var sensorMenu = $("#" + sensorId + " .sensor-menu");

      // Verificar se o menu lateral está aberto
      if (sensorMenu.is(":visible")) {
        // Fechar o menu lateral se estiver aberto
        sensorMenu.slideUp();
      } else {
        // Fechar outros menus e abrir o menu atual
        $(".sensor-menu").not(sensorMenu).slideUp();
        sensorMenu.slideDown();
      }
    });
  });
</script>

</body>
</html>
